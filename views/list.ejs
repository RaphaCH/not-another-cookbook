<script>
    const expandCheckbox = document.querySelectorAll('input.expand')
    const headerLabel = document.querySelectorAll('label')
    const expandArrow = document.querySelectorAll('i#list-expand-arrow')

    headerLabel.forEach((label) => {
        label.addEventListener('click', () => {
            if (expandCheckbox.checked) {
                expandArrow.className = 'fa-solid fa-angle-down';
